{
    "name": "Recipe Extension",
    "description": "Skip the useless information before the recipe",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/recipe_16.png",
            "24": "/images/recipe_24.png",
            "42": "/images/recipe_32.png",
            "128": "/images/recipe_128.png"
        }
    },
    "icons": {
        "16": "/images/recipe_16.png",
        "24": "/images/recipe_24.png",
        "42": "/images/recipe_32.png",
        "128": "/images/recipe_128.png"
    }   
}